<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/mainTitle"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please choose an activity..."
        android:id="@+id/activityPrompt"
        android:layout_below="@+id/mainTitle"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/HoFBtn"
        android:background="@drawable/ic_settings_black_24dp"
        android:layout_above="@+id/simulateBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:id="@+id/simulateBtn"
        android:background="@drawable/shinyditto_icon"
        android:paddingLeft="100dp"
        android:layout_above="@+id/pokedexBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/pokedexBtn"
        android:background="@drawable/pokedex_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Simulate"
        android:textColor="#000"
        android:id="@+id/SimulateBtnText"
        android:layout_alignTop="@+id/simulateBtn"
        android:layout_alignRight="@+id/mainTitle"
        android:layout_alignEnd="@+id/mainTitle"
        android:layout_marginTop="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Track"
        android:textColor="#000"
        android:id="@+id/trackBtnText"
        android:layout_alignTop="@+id/pokedexBtn"
        android:layout_alignLeft="@+id/SimulateBtnText"
        android:layout_alignStart="@+id/SimulateBtnText"
        android:layout_marginTop="47dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hall of Fame"
        android:id="@+id/HoFText"
        android:layout_marginTop="41dp"
        android:layout_alignTop="@+id/HoFBtn"
        android:layout_alignLeft="@+id/SimulateBtnText"
        android:layout_alignStart="@+id/SimulateBtnText"/>


</RelativeLayout>


